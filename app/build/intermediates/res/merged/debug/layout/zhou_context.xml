<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:gravity="center"
    android:padding="5dp"
    android:background="#fff"
    android:orientation="horizontal" >
    <TextView 
        android:textColor="#9000"
        android:id="@+id/tv_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="门店1503A"/>
    <LinearLayout 
        android:visibility="gone"
         android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textColor="#9000"
			android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班主任"/>
        <TextView 
            android:textColor="#9000"
            android:id="@+id/tv_class_teachers"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石逗逼"/>
    </LinearLayout>
    <LinearLayout 
         android:visibility="gone"
         android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textColor="#9000"
           android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任课老师"/>
        <TextView 
            android:textColor="#9000"
            android:textSize="12sp"
            android:id="@+id/tv_subject_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石石"/>
    </LinearLayout>
    <LinearLayout 
         android:layout_weight="1"
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textColor="#9000"
           android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计应到(人)"/>
        <TextView 
            android:textColor="#9000"
           android:textSize="12sp"
            android:id="@+id/tv_class_jishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"/>
    </LinearLayout>
     <LinearLayout 
          android:layout_weight="1"
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textColor="#9000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出勤率"/>
        <TextView 
            android:textColor="#9000"
           android:textSize="12sp"
            android:id="@+id/tv_class_chuqinlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95%"/>
    </LinearLayout>
     <LinearLayout 
          android:layout_weight="1"
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textColor="#9000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违纪率"/>
        <TextView 
            android:textColor="#9000"
           android:textSize="12sp"
            android:id="@+id/tv_class_weijilv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.1%"/>
    </LinearLayout>

</LinearLayout>
