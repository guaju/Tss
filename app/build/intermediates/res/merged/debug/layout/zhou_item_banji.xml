<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/tv_banji_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#9000"
        android:text="门店1503A"/>
    <LinearLayout 
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
			android:textSize="12sp"
			android:textColor="#9000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班主任"/>

        <TextView
            android:id="@+id/tv_banji_headteacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="董丽霞"
            android:textColor="#000"
            android:textSize="9sp" />

    </LinearLayout>
    <LinearLayout 
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textSize="12sp"
             android:textColor="#9000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任课老师"/>
        <TextView 
            android:textSize="9sp"
            android:id="@+id/tv_banji_teacher"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="高温"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textSize="12sp"
             android:textColor="#9000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基数"/>
        <TextView 
            android:textSize="9sp"
            android:id="@+id/tv_banji_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="14"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textSize="12sp"
             android:textColor="#9000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出勤率"/>
        <TextView 
            android:textSize="9sp"
            android:id="@+id/tv_banji_attendence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="0"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_marginLeft="7dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:textSize="12sp"
             android:textColor="#9000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违纪率"/>
        <TextView 
            android:textSize="9sp"
            android:id="@+id/tv_banji_disciplinerate"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00%"/>
    </LinearLayout>

</LinearLayout>
