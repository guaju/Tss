<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    tools:context="us.mifeng.rizongbiao.ClassOverall_Activity" >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/tv_keshi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#67F7F0"
        android:gravity="center"
        android:text="第一节课"
        android:textSize="20sp" 
        />
    	<ImageView
    	   android:layout_alignParentRight="true"
    	   android:background="@drawable/selector_edit"
    	   android:id="@+id/id_iv"
    	   android:layout_width="35dp"
    	   android:layout_height="35dp"
    	    />
	</RelativeLayout>
    <TextView
        android:id="@+id/tv_ctime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="查课时间"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_class_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="班主任：杨林"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="任课老师：吴家琳"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_jxjd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="教学进度："
        android:textSize="15sp" />

	 <TextView
        android:id="@+id/tv_yingdao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="应到人数：14人"
        android:textSize="15sp" />
	
    <TextView
        android:id="@+id/tv_shidao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="实到人数：14人"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_chuqinlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="班级出勤率：100%"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_weijilv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="班级违纪率：0%"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_teacher_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="教师情况：认真督导学生学习"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_student_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="学生情况：全体都在认真学习"
        android:textSize="15sp" />
     <TextView
        android:id="@+id/explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="注:违纪率会受查课人员调整影响"
        android:textColor="@color/red"
        android:textStyle="italic"
        android:textSize="12sp" />
   

    <TextView
        android:id="@+id/tv_weijiren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="违纪人数：0人"
        android:textSize="15sp" />
    <View
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#8000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        
        />
    <us.mifeng.bubaexaminationsystem.view.MyListView
        android:id="@+id/lv_mylv"
        android:divider="#8000"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <us.mifeng.bubaexaminationsystem.view.MyListView
        android:layout_marginTop="5dp"
        android:id="@+id/lv_mylv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
</LinearLayout>