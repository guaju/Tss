<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    >
    <LinearLayout 
        android:id="@+id/ll"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:orientation="horizontal"	    
	    android:gravity="center"
	    >
	    <ImageButton 
	        android:onClick="click"
			android:background="@drawable/zuojiantou"	        
	        android:layout_width="50dp"
	        android:layout_height="60dp"
	        />
	    <TextView 
	        android:layout_width="200dp"
	        android:layout_height="60dp"
	        android:layout_weight="1"
	        android:text="学院检查月汇总表"
	        android:background="#FBCD45"
	        android:gravity="center"
	        android:textSize="20sp"
	        android:textColor="#2D90E6"
	        />
	    <ImageButton 
	        android:background="@drawable/shengluehao"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        />
	</LinearLayout> 
	
    <TextView 
	    android:id="@+id/yue_tv"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:text="2016.03.04-04.08"
	    android:gravity="center_vertical"
	    android:paddingLeft="20dp"
	    android:background="#F8F8F8"
	    android:textSize="20sp"
	    />
    
    <ExpandableListView 
        android:id="@+id/lv"
        android:layout_weight="1"
        android:groupIndicator="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ExpandableListView>
    
    <fragment 
       android:id="@+id/fg_total"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:name="us.mifeng.bubaexaminationsystem.fragment.Data_Fragment"/>

</LinearLayout>
