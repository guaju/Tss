<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
   <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:orientation="horizontal"	    
	    android:gravity="center">
	    <ImageButton 
	        android:onClick="click"
			android:background="@drawable/zuojiantou"	        
	        android:layout_width="50dp"
	        android:layout_height="60dp"/>
	    <TextView 
	        android:layout_width="200dp"
	        android:layout_height="60dp"
	        android:layout_weight="1"
	        android:text="学院检查日汇总表"
	        android:background="#FBCD45"
	        android:gravity="center"
	        android:textSize="20sp"
	        android:textColor="#2D90E6"
	        />
	    <ImageButton 
	        android:background="@drawable/shengluehao"
	        android:layout_width="60dp"
	        android:layout_height="60dp" />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:orientation="horizontal">
	    <Button 
	        android:onClick="choicedate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="请选择日期"/>
	    <View 
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:layout_weight="1"/>
	    <TextView 
	        android:id="@+id/tv_riqi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="riqi"/>
	</LinearLayout>
   <ExpandableListView
       android:layout_weight="1"
       android:id="@+id/disciplinerrateinday"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:groupIndicator="@null" >
   </ExpandableListView>
   
   <fragment 
       android:id="@+id/fg_total"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:name="us.mifeng.bubaexaminationsystem.fragment.TotalFragWeiJi"/>
	

</LinearLayout>
