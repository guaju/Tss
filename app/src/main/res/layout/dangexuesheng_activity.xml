<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6002E"
        android:gravity="center_vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/banji_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="移动1509A"
            android:textColor="#000"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:onClick="fanhui"
            android:src="@drawable/arrow_back_hl" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_biaoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="学生信息"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/aoteman" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名：小题"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别：女"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/qingjia"
            style="@style/per_student_insert_linear_style"
            android:onClick="qingjia" >

            <TextView
                android:id="@+id/qingjiat"
                style="@style/per_student_insert_textview_style"
                android:text="请假" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shueijiao"
            style="@style/per_student_insert_linear_style"
            android:onClick="shueijiao" >

            <TextView
                android:id="@+id/shueijiaot"
                style="@style/per_student_insert_textview_style"
                android:text="睡觉" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chidao"
            style="@style/per_student_insert_linear_style"
            android:onClick="chidao" >

            <TextView
                android:id="@+id/chidaot"
                style="@style/per_student_insert_textview_style"
                android:text="迟到" />
        </LinearLayout>
		 <LinearLayout
            android:id="@+id/junzhuang"
            style="@style/per_student_insert_linear_style"
            android:onClick="junzhuang" >

            <TextView
                android:id="@+id/junzhuangt"
                style="@style/per_student_insert_textview_style"
                android:paddingLeft="10dp"
            	android:paddingRight="10dp"
                android:text="不穿军装" />
        </LinearLayout>
       
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/wshouji"
            style="@style/per_student_insert_linear_style"
            android:onClick="wshouji"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/wshoujit"
                style="@style/per_student_insert_textview_style"
                android:text="玩手机" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dayouxi"
            style="@style/per_student_insert_linear_style"
            android:onClick="dayouxi"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/dayouxit"
                style="@style/per_student_insert_textview_style"
                android:text="打游戏" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chidongxi"
            style="@style/per_student_insert_linear_style"
            android:onClick="chidongxi"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/chidongxit"
                style="@style/per_student_insert_textview_style"
                android:text="吃东西" />
        </LinearLayout>
		  <LinearLayout
            android:id="@+id/kanshiping"
            style="@style/per_student_insert_linear_style"
            android:onClick="kanshiping"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/kanshipingt"
                style="@style/per_student_insert_textview_style"
                android:text="看视频" />
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/shangcesuo"
            style="@style/per_student_insert_linear_style"
            android:onClick="shangcesuo"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/shangcesuot"
                style="@style/per_student_insert_textview_style"
                android:text="上厕所" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/daierji"
            style="@style/per_student_insert_linear_style"
            android:onClick="daierji"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/daierjit"
                style="@style/per_student_insert_textview_style"
                android:text="带耳机" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/danao"
            style="@style/per_student_insert_linear_style"
            android:onClick="danao"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/danaot"
                style="@style/per_student_insert_textview_style"
                android:text="打闹聊天" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xiuxue"
            style="@style/per_student_insert_linear_style"
            android:onClick="xiuxue" >

            <TextView
                android:id="@+id/xiuxuet"
                style="@style/per_student_insert_textview_style"
                android:text="休学" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/kuangke"
            style="@style/per_student_insert_linear_style"
            android:onClick="kuangke" >

            <TextView
                android:id="@+id/kuangket"
                style="@style/per_student_insert_textview_style"
                android:text="旷课" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tingke"
            style="@style/per_student_insert_linear_style"
            android:onClick="tingke" >

            <TextView
                android:id="@+id/tingket"
                style="@style/per_student_insert_textview_style"
                android:text="停课" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/sanfangqingjial"
            style="@style/per_student_insert_linear_style"
            android:onClick="sanfangqingjia"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/sanfangqingjiat"
                style="@style/per_student_insert_textview_style"
                android:text="三方请假" />
        </LinearLayout>
        
        </LinearLayout>
        
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >
          
        <LinearLayout
            android:id="@+id/qita"
            style="@style/per_student_insert_linear_style"
            android:onClick="qita"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/qitat"
                style="@style/per_student_insert_textview_style"
                android:text="其它违纪" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_qingkuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:text="违纪情况记录"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_weiji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:cursorVisible="false"
        android:hint="将信息输入到此文本框" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F6002E"
        android:gravity="center"
        android:onClick="click"
        android:padding="3dp"
        android:text="确认返回"
        android:textSize="18sp" />

</LinearLayout>